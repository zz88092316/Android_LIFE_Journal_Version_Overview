<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/activated"
    >

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/text_name"
            android:gravity="center"
            android:text="    "

            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_time_content"
            android:layout_width="286dp"
            android:layout_height="47dp"
            android:layout_toLeftOf="@+id/text_time"
            android:gravity="center"
            android:text=""
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_typename"
            android:layout_width="51dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/text_time_content"
            android:gravity="left"
            android:text="圖文"
            android:textSize="20dp"

            />

    </LinearLayout>

</LinearLayout>
