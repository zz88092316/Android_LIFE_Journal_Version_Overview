<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/activated"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:text="筆記名稱:"
            android:textSize="30dp"
            android:typeface="monospace"

            />

        <TextView
            android:id="@+id/name_content"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_name"
            android:text=""
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:text="時間:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/text_time_content"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_time"
            android:text=""
            android:textSize="22dp" />

        <TextView
            android:id="@+id/text_typename"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/text_time_content"
            android:text="圖文"
            android:textSize="30dp"

            />

    </LinearLayout>

</LinearLayout>
